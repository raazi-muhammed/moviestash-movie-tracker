<%- include("./layout/header.ejs")%>

<body
	id="body-admin-login"
	class="bg-dark text-light d-flex align-items-center justify-content-center p-4 vh-100">
	<div class="wrapper row input-group-width my-auto">
		<div class="row flex-grow-1 bg-primary p-sm-4 p-0 m-0 rounded-4">
			<h1 class="text-light">Admin Panel</h1>
			<p>Welcome to the Admin Portal. Please log in to access your account</p>
			<form action="/admin/submit" method="POST">
				<div class="mb-3">
					<!-- <label for="exampleInputEmail1" class="form-label">Email address</label> -->
					<input
						type="text"
						class="form-control"
						id="adminName"
						name="adminName"
						aria-describedby="emailHelp"
						placeholder="admin name" />
				</div>

				<div class="mb-3">
					<!-- <label for="exampleInputPassword1" class="form-label">Password</label> -->
					<input
						type="password"
						class="form-control"
						id="adminPassword"
						name="adminPassword"
						placeholder="adminPassword" />
				</div>

				<button type="submit" class="btn btn-dark">Log In</button>
			</form>
		</div>
	</div>
	<section style="position: fixed; bottom: 1rem; right: 1rem; max-width: 30rem">
		<% if (message != "") {%>

		<div class="alert alert-danger alert-dismissible fade show" role="alert">
			<%- message %>
			<button
				type="button"
				class="btn-close"
				data-bs-dismiss="alert"
				aria-label="Close"></button>
		</div>
		<% } %>
	</section>
</body>

<%- include("./layout/footer.ejs")%>
