<%- include("./layout/header.ejs") %>

<body class="bg-dark">
	<%- include("./layout/other/user-top.ejs") %>
	<main class="p-4">
		<section class="d-flex gap-4 flex-wrap">
			<% moviesDetails.forEach((element) => { %>
			<section>
				<!-- <h3><%= element.title%></h3> -->
				<!-- <img src="<%= element.poster%>" alt="<%= element.title%>" srcset="" /> -->
			</section>
			<section
				style="
					background-image: url('<%= element.poster%>');
					background-size: contain;
					background-position: top center;
					width: 15rem;
					height: 28rem;
				"
				class="bg-black main-card text-light rounded-4 d-flex flex-column align-items-center"
			>
				<section
					class="p-2 mt-auto gap-2 w-100 align-itmes-end"
					style="
						backdrop-filter: blur(20px);
						background-color: rgba(0, 0, 0, 0.427);
						border-radius: 0 0 1rem 1rem;
					"
				>
					<p><%= element.title%></p>
					<section class="d-flex">
						<button
							class="w-50 btn btn-dark-half d-flex align-items-center justify-content-center rounded-pill px-auto"
						>
							<svg
								xmlns="http://www.w3.org/2000/svg"
								width="16"
								height="16"
								fill="currentColor"
								class="bi bi-clock"
								viewBox="0 0 16 16"
							>
								<path
									d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z"
								/>
								<path
									d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z"
								/>
							</svg>
							<a
								href="/admin/dashboard/edit?id=<%= element._id%>"
								class="ms-2 m-0 fw-normal"
								>Later</a
							>
						</button>
						<button
							class="w-50 btn btn-dark-half d-flex align-items-center justify-content-center rounded-pill px-auto"
						>
							<svg
								xmlns="http://www.w3.org/2000/svg"
								width="16"
								height="16"
								fill="currentColor"
								class="bi bi-heart"
								viewBox="0 0 16 16"
							>
								<path
									d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"
								/>
							</svg>
							<a
								href="/admin/dashboard/delete?id=<%= element._id%>"
								class="ms-2 m-0 fw-normal text-danger"
								>Love</a
							>
						</button>
					</section>
				</section>
			</section>
			<%})%>
		</section>
	</main>
</body>

<%- include("./layout/footer.ejs") %>
