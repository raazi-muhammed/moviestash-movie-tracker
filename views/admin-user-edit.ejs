<%- include("./layout/header.ejs") %>

<body class="bg-dark">
	<%- include("./layout/other/admin-top.ejs") %>
	<input class="form-control" type="number" placeholder="Default input" />

	<main class="p-5">
		<div class="wrapper row input-group-width mx-auto">
			<div class="row flex-grow-1 bg-dark p-sm-4 p-0 m-0 rounded-4 text-light">
				<h1 class="text-primary mb-4">Edit Data</h1>
				<form
					action="/admin/dashboard/edit/submit?id=<%-userToEdit[0]._id%>"
					method="POST"
				>
					<div class="mb-3">
						<label for="username" class="form-label ms-2">Name</label>
						<input
							type="text"
							id="username"
							value="<%- userToEdit[0].name%>"
							name="username"
							class="form-control"
							aria-describedby="emailHelp"
							placeholder="username"
						/>
					</div>

					<div class="mb-3">
						<label for="email" class="form-label ms-2">Email</label>
						<input
							type="text"
							id="email"
							value="<%- userToEdit[0].email%>"
							name="email"
							class="form-control"
							aria-describedby="emailHelp"
							placeholder="email"
						/>
					</div>
					<label for="username" class="form-label ms-2">Gender</label>
					<select
						class="form-select mb-3"
						name="gender"
						aria-label="Default select example"
					>
						<option selected>Gender</option>
						<option value="Male">Male</option>
						<option value="Female">Female</option>
						<option value="Rather not say">Rather not say</option>
					</select>
					<div class="mb-3">
						<label for="age" class="form-label ms-2">Age</label>
						<input
							type="number"
							id="age"
							name="age"
							value="<%- userToEdit[0].age%>"
							class="form-control"
							aria-describedby="emailHelp"
							placeholder="age"
						/>
					</div>
					<div class="mb-3">
						<label for="age" class="form-label ms-2">Admin</label>
						<input
							type="boolean"
							id="admin"
							name="admin"
							value="<%- userToEdit[0].admin%>"
							class="form-control"
							aria-describedby="emailHelp"
							placeholder="age"
						/>
					</div>
					<div class="mb-3 form-check">
						<input
							type="checkbox"
							class="form-check-input"
							id="exampleCheck1"
						/>
						<label class="form-check-label" for="exampleCheck1">Confirm</label>
					</div>
					<button type="submit" class="btn btn-primary">Edit</button>
					<p class="text-center mt-3">
						<a href="/admin/dashboard">Go Back to <b> Dashboard</b></a>
					</p>
				</form>
			</div>
		</div>
	</main>
</body>

<%- include("./layout/footer.ejs") %>
