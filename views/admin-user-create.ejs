<%- include("./layout/header.ejs") %>

<body class="bg-dark">
	<%- include("./layout/other/admin-top.ejs") %>
	<input class="form-control" type="number" placeholder="Default input" />

	<main class="p-5">
		<div class="wrapper row mx-auto" style="max-width: 40rem">
			<div class="row flex-grow-1 bg-dark p-sm-4 p-0 m-0 rounded-4 text-light">
				<h1 class="text-primary mb-4 text-md-center">Create a User</h1>
				<form action="/admin/dashboard/create/submit" method="POST">
					<div class="mb-3 col-12 d-md-flex align-items-center">
						<label
							for="username"
							class="form-label ms-2 p-2 w-25 text-md-end my-0"
							>Name</label
						>
						<input
							type="text"
							id="username"
							name="username"
							class="form-control"
							aria-describedby="emailHelp"
							placeholder="username" />
					</div>

					<div class="mb-3 col-12 d-md-flex align-items-center">
						<label for="email" class="form-label ms-2 p-2 w-25 text-md-end my-0"
							>Email</label
						>
						<input
							type="text"
							id="email"
							name="email"
							class="form-control"
							aria-describedby="emailHelp"
							placeholder="email" />
					</div>
					<div class="mb-3 col-12 d-md-flex align-items-center">
						<label
							for="username"
							class="form-label ms-2 p-2 w-25 text-md-end my-0"
							>Gender</label
						>
						<select
							class="form-control w-100"
							name="gender"
							aria-label="Default select example">
							<option selected>Gender</option>
							<option value="Male">Male</option>
							<option value="Female">Female</option>
							<option value="Rather not say">Rather not say</option>
						</select>
					</div>
					<div class="mb-3 col-12 d-md-flex align-items-center">
						<label for="age" class="form-label ms-2 p-2 w-25 text-md-end my-0"
							>Age</label
						>
						<input
							type="number"
							id="age"
							name="age"
							class="form-control"
							aria-describedby="emailHelp"
							placeholder="age" />
					</div>
					<div class="mb-3 col-12 d-md-flex align-items-center">
						<label for="age" class="form-label ms-2 p-2 w-25 text-md-end my-0"
							>Admin</label
						>
						<input
							type="boolean"
							id="admin"
							name="admin"
							class="form-control"
							aria-describedby="emailHelp"
							placeholder="admin" />
					</div>
					<div class="mb-3 col-12 d-md-flex align-items-center">
						<label for="age" class="form-label ms-2 p-2 w-25 text-md-end my-0"
							>Profile</label
						>
						<input
							type="text"
							id="profilePic"
							name="profilePic"
							class="form-control"
							aria-describedby="emailHelp"
							placeholder="profile picture" />
					</div>
					<div class="mb-3 col-12 d-md-flex align-items-center">
						<label for="age" class="form-label ms-2 p-2 w-25 text-md-end my-0"
							>Password</label
						>
						<input
							type="password"
							id="password"
							name="password"
							class="form-control"
							aria-describedby="emailHelp"
							placeholder="password" />
					</div>
					<div
						class="mb-3 mx-3 form-check d-flex gap-2 justify-content-md-center">
						<input
							type="checkbox"
							class="form-check-input"
							id="exampleCheck1" />
						<label class="form-check-label" for="exampleCheck1">Confirm</label>
					</div>
					<div class="my-auto d-flex justify-content-center">
						<button type="submit" class="btn btn-primary mx-auto">
							Create
						</button>
					</div>
					<p class="text-center mt-3">
						<a href="/admin/dashboard">Go Back to <b> Dashboard</b></a>
					</p>
				</form>
			</div>
		</div>
	</main>
	<section style="position: fixed; bottom: 1rem; right: 1rem; max-width: 30rem">
		<% if (message != "") {%>

		<div class="alert alert-danger alert-dismissible fade show" role="alert">
			<%- message %>
			<button
				type="button"
				class="btn-close"
				data-bs-dismiss="alert"
				aria-label="Close"></button>
		</div>
		<% } %>
	</section>
</body>

<%- include("./layout/footer.ejs") %>
